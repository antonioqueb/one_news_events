<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Formulario -->
    <record id="view_one_event_form" model="ir.ui.view">
        <field name="name">one.event.form</field>
        <field name="model">one.event</field>
        <field name="arch" type="xml">
            <form string="Event">
                <header>
                    <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Event Title"/></h1>
                        <label for="slug"/>
                        <h3><field name="slug" placeholder="my-event-slug"/></h3>
                    </div>
                    
                    <group>
                        <group string="Details">
                            <field name="date_display"/>
                            <field name="time_display"/>
                            <field name="location"/>
                        </group>
                        <group string="Organizer">
                            <field name="organizer"/>
                            <field name="contact"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Main Content">
                            <group>
                                <field name="description_short"/>
                            </group>
                            <group string="Main Image">
                                <field name="image_file" widget="image" class="oe_avatar" options="{'size': [200, 200]}"/>
                                <field name="image_external_url" placeholder="https://example.com/image.jpg"/>
                            </group>
                            <separator string="Long Description (HTML)"/>
                            <field name="description_long" widget="html" options="{'style-inline': true}"/>
                        </page>
                        <page string="Photo Gallery">
                            <field name="gallery_ids">
                                <!-- CAMBIO CRÍTICO: tree -> list -->
                                <list editable="bottom">
                                    <field name="image_file" widget="image" options="{'size': [50, 50]}"/>
                                    <field name="image_external_url"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Lista (Anteriormente Tree) -->
    <record id="view_one_event_tree" model="ir.ui.view">
        <field name="name">one.event.list</field>
        <field name="model">one.event</field>
        <field name="arch" type="xml">
            <!-- CAMBIO CRÍTICO: tree -> list -->
            <list string="Events">
                <field name="name"/>
                <field name="slug"/>
                <field name="date_display"/>
                <field name="status" widget="badge" decoration-success="status == 'upcoming'" decoration-muted="status == 'past'"/>
            </list>
        </field>
    </record>

    <!-- Acción de Ventana -->
    <record id="action_one_event" model="ir.actions.act_window">
        <field name="name">News &amp; Events</field>
        <field name="res_model">one.event</field>
        <!-- En Odoo 19 preferimos 'list' en lugar de 'tree', aunque view_mode suele aceptar ambos por compatibilidad, la vista definida arriba es list -->
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create your first Event or News item!
          </p>
        </field>
    </record>

    <!-- Menús -->
    <menuitem id="menu_one_event_root" name="App Events" web_icon="base,static/description/icon.png" sequence="10"/>
    <menuitem id="menu_one_event_list" name="All Events" parent="menu_one_event_root" action="action_one_event" sequence="1"/>
</odoo>